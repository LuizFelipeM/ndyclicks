{
  "format": "page",
  "id": "post",
  "label": "Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "Nome único do post"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Título",
          "placeholder": "",
          "allowTargetBlank": false,
          "multi": "heading1"
        }
      },
      "short_description": {
        "type": "StructuredText",
        "config": {
          "label": "Descrição curta",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "show_short_description_on_post": {
        "type": "Boolean",
        "config": {
          "label": "Mostrar Descrição curta no Post?",
          "placeholder_false": "Não",
          "placeholder_true": "Sim",
          "default_value": false
        }
      },
      "thumbnail": {
        "type": "Image",
        "config": {
          "label": "Thumbnail",
          "constraint": {
            "width": 3000,
            "height": 4000
          },
          "thumbnails": []
        }
      },
      "show_thumbnail_on_post": {
        "type": "Boolean",
        "config": {
          "label": "Mostrar Thumbnail no Post?",
          "placeholder_false": "Não",
          "placeholder_true": "Sim",
          "default_value": true
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "image": {
              "type": "SharedSlice"
            },
            "splitter": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Título",
          "placeholder": "Título de página utilizado por redes sociais e motores de busca"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Descrição",
          "placeholder": "Um resumo curto da página"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "label": "Meta Imagem",
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
